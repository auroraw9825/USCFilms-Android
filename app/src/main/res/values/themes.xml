<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HW9_2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!--colorPrimary是action bar的颜色-->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/white</item>
<!--        <item name="colorPrimaryVariant">@color/dark_background</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
<!--        &lt;!&ndash; Secondary brand color. &ndash;&gt;-->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->

        <!-- Status bar color. Action Bar上方的小细条，包含电量时间等-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>


    <!-- Added for splash screen. -->
    <style name="Theme.HW9_2.Launcher" >
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>


    <style name = "Theme.HW9_2.NoActionBar" parent = "@android:style/Theme.Holo.Light">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>



    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
       <!-- <item name="searchIcon">@drawable/ic_search</item>-->
        <!-- Gets rid of the "underline" in the text -->
        <item name="android:textColor">@color/white</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search_hint</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>


</resources>